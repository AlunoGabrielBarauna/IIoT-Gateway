CREATE TABLE [dbo].[CommSettingsTag](
	[TagID] [int] NOT NULL,
	[DrvStation] [nvarchar](1024) NULL,
	[DrvAdr] [nvarchar](1024) NULL,
	[DrvName] [nvarchar](1024) NULL,
	[GatewayID] [int] NULL,
	[OPCConnID] [int] NULL,
 CONSTRAINT [PK_CommSettingsTag] PRIMARY KEY CLUSTERED 
(
	[TagID] ASC
)WITH (PAD_INDEX = OFF, STATISTICS_NORECOMPUTE = OFF, IGNORE_DUP_KEY = OFF, ALLOW_ROW_LOCKS = ON, ALLOW_PAGE_LOCKS = ON, OPTIMIZE_FOR_SEQUENTIAL_KEY = OFF) ON [PRIMARY]
) ON [PRIMARY]
GO


